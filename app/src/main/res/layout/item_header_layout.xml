<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey1"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_margin_left_right"
        android:paddingTop="@dimen/list_item_margin_top_bottom_smaller"
        android:paddingBottom="@dimen/list_item_margin_top_bottom_smaller"
        android:text="header item"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/list_item_margin_left_right"
        android:background="@color/white" />
</LinearLayout>


